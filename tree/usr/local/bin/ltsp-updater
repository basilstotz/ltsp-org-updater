#!/bin/sh

test $(id --user) = 0 || exec sudo $0

if test "$(hostname)" = "%%hostname%%";then
    sudo ltsp image /
    sudo ltsp ipxe
    sudo ltsp initrd
    echo
    echo
    echo
    echo
    /usr/games/cowsay "LTSP is ready!" | /usr/games/lolcat
else
    echo
    echo
    echo
    echo
    echo "      ******** please run this programm only on the server ********"
fi
sleep 5
exit
